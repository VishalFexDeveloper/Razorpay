<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:orientation="vertical"    android:paddingBottom="20dp"    android:padding="8dp"    android:layout_height="match_parent">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="razorpay update"        android:textSize="26sp"        android:gravity="center"        android:textColor="#43A047"        android:layout_marginTop="30dp"/>    <EditText        android:id="@+id/putName"        android:layout_marginTop="30dp"        android:layout_width="match_parent"        android:hint="@string/name"        android:inputType="text"        android:layout_height="wrap_content"/>    <EditText        android:id="@+id/putEmail"        android:layout_width="match_parent"        android:hint="email..."        android:layout_marginTop="20sp"        android:inputType="textEmailAddress"        android:layout_height="wrap_content"/>    <EditText        android:id="@+id/putNumber"        android:layout_width="match_parent"        android:hint="number..."        android:inputType="number"        android:layout_marginTop="20sp"        android:layout_height="wrap_content"/>    <Button        android:id="@+id/putBtn"        android:layout_width="match_parent"        android:layout_marginTop="50dp"        android:text="update"        android:textSize="20sp"        android:layout_height="wrap_content"/></LinearLayout>